{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@tsp/wse/*": ["../../src/*"],
      "@shared/*": ["../shared/src/*"]
    },
    "rootDir": "./src", /* Specify the root folder within your source files. */
    "outDir": "./dist",
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": [
      "types",
      "node_modules/@types",
      "../../src/types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "references": [
    { 
      "path": "../../"
    },
    {
      "path": "../shared/"
    }
  ]
}
